{
//  "compileOnSave ": true, not webpack :(
  "compilerOptions": {
    "target": "es2017",
    //    "target": "es6",
    //    "lib": ["es2017"], // if target
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "webassembly-js-api"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "bin",
    "tests"
  ]
}
